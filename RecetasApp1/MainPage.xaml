<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RecetasApp1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Recetas">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="50"
            VerticalOptions="Start">

            <Image Source="gastronomia.jpeg" />

            <Label
                FontAttributes="Bold"
                FontSize="Medium"
                HorizontalOptions="Center"
                Text="¡Bienvenido a la App para guardar tus recetas!"
                VerticalOptions="Center" />

            <Button
                x:Name="NuevaReceta"
                Clicked="NuevaReceta_Clicked"
                FontAttributes="Bold"
                FontSize="Subtitle"
                Text="Nueva receta" />

            <Button
                x:Name="MisRecetas"
                Clicked="MisRecetas_Clicked"
                FontAttributes="Bold"
                FontSize="Subtitle"
                Text="Mis recetas" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
